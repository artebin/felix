XF86MonBrightnessDown
	flock -n "/dev/shm/${USER}.brillo.backlight.notification_id" bash /home/njames/.config/openbox/brillo_backlight_notify.sh -d

XF86MonBrightnessUp
	flock -n "/dev/shm/${USER}.brillo.backlight.notification_id" bash /home/njames/.config/openbox/brillo_backlight_notify.sh -i

XF86KbdBrightnessDown
	flock -n "/dev/shm/${USER}.brillo.keyboard.notification_id" bash /home/njames/.config/openbox/brillo_keyboard_notify.sh -d

XF86KbdBrightnessUp
	flock -n "/dev/shm/${USER}.brillo.keyboard.notification_id" bash /home/njames/.config/openbox/brillo_keyboard_notify.sh -i

XF86AudioLowerVolume
	flock -n "/dev/shm/${USER}.pulseaudioctl.volume.notification_id" bash /home/njames/.config/openbox/pulseaudioctl_notify.sh -d

XF86AudioRaiseVolume
	flock -n "/dev/shm/${USER}.pulseaudioctl.volume.notification_id" bash /home/njames/.config/openbox/pulseaudioctl_notify.sh -i

XF86AudioMute
	pulseaudio-ctl mute

XF86AudioMicMute
	pulseaudio-ctl mute-input
