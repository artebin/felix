#!/usr/bin/env sh

# The shell used to execute the .xsessionrc is the one used by the graphical login session manager.
# It is safe to assume that it will be sh.

if [ "${XDG_SESSION_DESKTOP}" = "openbox" ]; then
	if [ -d "${HOME}"/.xsessionrc.d/felix ]; then
		for FILE in "${HOME}"/.xsessionrc.d/felix/*.sh; do
			. "${FILE}"
		done
	fi
fi
