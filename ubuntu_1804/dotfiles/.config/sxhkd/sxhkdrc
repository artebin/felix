#	flock -n "/dev/shm/${USER}.pulseaudioctl.volume.notification_id" bash "${HOME}/scripts/pulseaudioctl_notify.sh" -d

#XF86AudioRaiseVolume
#	flock -n "/dev/shm/${USER}.pulseaudioctl.volume.notification_id" bash "${HOME}/scripts/pulseaudioctl_notify.sh" -i

#XF86AudioMute
#	pulseaudio-ctl mute

#XF86AudioMicMute
#	pulseaudio-ctl mute-input

XF86Search
	caja --no-desktop

XF86HomePage
	caja --no-desktop "${HOME}"

XF86Explorer
	caja --no-desktop

XF86Mail
	claws-mail

XF86Messenger
	empathy

XF86Music
	vlc

# Rii i8: XF86Tools symbol is sent for the Media Player key
XF86Tools
	vlc

XF86Terminal
	x-terminal-emulator

XF86WWW
	x-www-browser

XF86PowerOff
	python "${HOME}/scripts/power_button_pressed.py"
